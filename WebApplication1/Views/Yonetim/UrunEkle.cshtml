@model WebApplication1.Models.UrunlerModel
@{
    ViewBag.Title = "UrunEkle";
}

<h2>UrunEkle</h2>

@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(x=>x.UrunAdi)
        @Html.TextBoxFor(x=>x.UrunAdi)
    </div>
    <div>
        @Html.LabelFor(x=>x.UrunResmiURL)
        @Html.TextBoxFor(x=>x.UrunResmiURL)
    </div>
    <div>
        @Html.LabelFor(x=>x.UrunOzellikleri)
        @Html.TextBoxFor(x=>x.UrunOzellikleri)
    </div>
    <div>
        @Html.LabelFor(x=>x.UrunTanitimVideosu)
        @Html.TextBoxFor(x=>x.UrunTanitimVideosu)
    </div>
    <div>
        @Html.LabelFor(x=>x.Fiyat)
        @Html.TextBoxFor(x=>x.Fiyat)
    </div>
    <div>
        @Html.LabelFor(x=>x.KategoriID)
        <select name="KategoriID">
            @foreach (WebApplication1.Models.KategoriModel item in ViewBag.k)
            {
                <option value="@item.KategoriModelID">@item.KategoriAdi</option>
            }
        </select>
    </div> @Html.ValidationSummary() <br />
    <input type="submit" value="Kaydet" />

}
