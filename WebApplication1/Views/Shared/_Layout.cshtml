            </div>
        </div>
        -->


            <div class="row">
                <div class="col-md-3 left-menu">
                    <div class="">
                        <h3>Son Eklenen Ürünler</h3>
                        <ul>
                            @Html.Action("SonEklenen2","Home")

                        </ul>

                    </div>


                   
                </div>



                <div class="col-md-9">

                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>


                
